    $(function(){
        //删除
        $('.link-del').live('click',function(){
            var id = $(this).attr('id');
            if(confirm("确定要删除吗？")) {
                $.ajax({  
                    type:"post",  
                    url:"{$call_url}",
                    timeout: 5000,  
                    dataType:"json",  
                    data:{"method":"Demand.delete","type":"text","content":{"id":id}},
                    success: function aa(data) {  
                        if (200 == data.status_code && 0 == data.content.is_success) {
                            alert('删除成功！');
                            init();
                            return false;
                        }else{
                            alert('删除失败！');
                            return false;
                        }
                    }  
                }) 
            }       
        });
